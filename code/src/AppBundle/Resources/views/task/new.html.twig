{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundle/app/css/new.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
    <div class="task_body">
        <h3>New Task</h3>

        <div class="form">
            <form class="form-horizontal" action="{{ path('task_new') }}" method="post" onsubmit="createTask(); return false;" {{ form_enctype(form) }}>
                <div class="error">{{ form_errors(form) }}</div>
                <div class="form-group">
                    {{ form_label(form.name, 'Name:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.tag, 'Tag:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.tag, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.content, 'Content:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.user, 'User:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.status, 'User:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
                        <button type="reset" class="btn btn-primary pull-right">Reset</button>
                        <button type="button" class="btn btn-default pull-right" onclick="closeProductForm();">Cancle</button>
                        {{ form_rest(form) }}
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="block">
        <a href="{{ path('task_list') }}" class="btn btn-primary">
            Go back to list
        </a>
    </div>
{% endblock %}